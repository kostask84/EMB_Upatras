isbn = {1544-9173},
issn = {1545-7885},
journal = {PLoS Biol.},
keywords = {America,Asia,BIOCLIM,ENM,GIS,Glacial period,MaxEnt,Predictive model,climate change,population size},
number = {4},
pages = {e79. doi:10.1371/journal.pbio.0060079},
pmid = {18384234},
title = {{Climate change, humans, and the extinctionof the woolly mammoth}},
volume = {6},
