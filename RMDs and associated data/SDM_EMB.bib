file = {:E$\backslash$:/Academic/R/Command{\_}lines/SDm/ENM{\_}Scotland/enm{\_}course/refs/modelling{\_}methods/2011{\_}Elith.pdf:pdf},
isbn = {1545962049},
issn = {13669516},
journal = {Divers. Distrib.},
keywords = {Absence,Ecological niche,Entropy,Machine learning,Presence-only,Species distribution model},
pages = {43--57},
pmid = {15204886},
title = {{A statistical explanation of MaxEnt for ecologists}},
