isbn = {1432-0894},
issn = {14320894},
journal = {Clim. Dyn.},
keywords = {CMIP5,Ensemble design,RCM,Uncertainty},
number = {11-12},
pages = {3237--3260},
publisher = {Springer Berlin Heidelberg},
title = {{Selecting CMIP5 GCMs for downscaling over multiple regions}},
