file = {:E$\backslash$:/Academic/R/Command{\_}lines/SDm/ENM{\_}Scotland/enm{\_}course/refs/modelling{\_}methods/2017{\_}Cola{\_}etal.pdf:pdf},
isbn = {6503251521},
