eprint = {1115},
file = {:E$\backslash$:/Academic/R/Command{\_}lines/SDm/ENM{\_}Scotland/enm{\_}course/refs/basic/2000{\_}Guisan.pdf:pdf},
isbn = {0304-3800},
issn = {03043800},
journal = {Ecol. Modell.},
keywords = {Biogeography,Model,Model calibration,Model formulation,Plant ecology,Species models,Vegetation models},
number = {2-3},
