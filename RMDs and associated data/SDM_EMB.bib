file = {:E$\backslash$:/Academic/R/Command{\_}lines/SDm/ENM{\_}Scotland/enm{\_}course/refs/modelling{\_}methods/2009{\_}Engler Guisan.pdf:pdf},
isbn = {1366-9516},
issn = {13669516},
journal = {Divers. Distrib.},
keywords = {Cellular automaton,Climate change,Dispersal modelling,Dynamic niche-based models,GLM,Plant species distribution},
pages = {590--601},
title = {{MigClim: Predicting plant distribution and dispersal in a changing climate}},
volume = {15},
