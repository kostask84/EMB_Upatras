file = {:E$\backslash$:/Academic/R/Command{\_}lines/SDm/ENM{\_}Scotland/enm{\_}course/refs/basic/2008{\_}Jimenez-Valverde.pdf:pdf},
isbn = {1472-4642},
issn = {13669516},
journal = {Divers. Distrib.},
keywords = {Accuracy,Error,Extent,Potential distribution,Realized distribution,Relative occurrence area,Species distribution models,Validation},
number = {6},
