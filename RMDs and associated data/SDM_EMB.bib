keywords = {AUC,BIOMOD,Bivariate models,Boyce index,Consensus forecast,Endangered species,Ensemble prediction,Species distribution modelling,Switzerland},
number = {10},
pages = {1210--1218},
title = {{Overcoming limitations of modelling rare species by using ensembles of small models}},
