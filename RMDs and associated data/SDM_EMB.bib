file = {:E$\backslash$:/Academic/R/Command{\_}lines/SDm/ENM{\_}Scotland/enm{\_}course/refs/climate{\_}change/2009{\_}Varela et al.pdf:pdf},
isbn = {1365-2699},
issn = {03050270},
journal = {J. Biogeogr.},
keywords = {Africa,Climatic equilibrium,Crocuta crocuta,Distribution models,Historical distribution,Model transferability,Spotted hyena,Western Eurasia},
number = {9},
pages = {1645--1655},
title = {{Is current climatic equilibrium a guarantee for the transferability of distribution model predictions? A case study of the spotted hyena}},
