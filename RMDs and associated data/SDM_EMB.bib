isbn = {1146-609X},
issn = {1146609X},
journal = {Acta Oecologica},
keywords = {Cetacea,Common dolphin,Ecological niche modelling,Maxent,Portugal},
pages = {24--32},
title = {{Common dolphin (Delphinus delphis) habitat preferences using data from two platforms of opportunity}},
