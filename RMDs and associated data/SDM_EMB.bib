journal = {Acta Oecologica},
keywords = {Ecological modelling,GIS,Habitat change,Land uses,Mesoscale,Reptiles,Species richness},
number = {2},
pages = {327--334},
title = {{Biodiversity and Land uses at a regional scale: Is agriculture the biggest threat for reptile assemblages?}},
volume = {35},
