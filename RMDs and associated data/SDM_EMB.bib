file = {:E$\backslash$:/Academic/R/Command{\_}lines/SDm/ENM{\_}Scotland/enm{\_}course/refs/climate{\_}change/2007{\_}Williams et al.pdf:pdf},
isbn = {0027-8424},
issn = {0027-8424},
journal = {Proc. Natl. Acad. Sci.},
number = {14},
pages = {5738--5742},
pmid = {17389402},
title = {{Projected distributions of novel and disappearing climates by 2100 AD}},
url = {http://www.pnas.org/cgi/doi/10.1073/pnas.0606292104},
volume = {104},
year = {2007}
}
