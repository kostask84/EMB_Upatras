file = {:E$\backslash$:/Academic/R/Command{\_}lines/SDm/ENM{\_}Scotland/enm{\_}course/refs/applications/2012{\_}Yesson.pdf:pdf},
isbn = {1365-2699},
issn = {03050270},
journal = {J. Biogeogr.},
keywords = {Calcite saturation state,Conservation biogeography,Habitat suitability modelling,Marine conservation,Maxent,Niche,Octocorallia,Predictive modelling,Vulnerable marine ecosystems},
