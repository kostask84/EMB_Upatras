isbn = {1354-1013},
issn = {13541013},
journal = {Glob. Chang. Biol.},
keywords = {Africa,Bioclimatic envelope model,Climate change,Consensus,Ensemble forecasting,Nonanalogue climate,Uncertainty,Vertebrates},
number = {4},
pages = {1253--1269},
title = {{Exploring consensus in 21st century projections of climatically suitable areas for African vertebrates}},
volume = {18},
year = {2012}
}
