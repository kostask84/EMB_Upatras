file = {:E$\backslash$:/Academic/R/Command{\_}lines/SDm/ENM{\_}Scotland/enm{\_}course/refs/reviews/2012{\_}Elith.pdf:pdf},
isbn = {2041-210X},
issn = {2041210X},
journal = {Methods Ecol. Evol.},
