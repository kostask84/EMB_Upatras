issn = {13652699},
journal = {J. Biogeogr.},
keywords = {Cross validation,Evaluation,Heteromys,Maxent,Niche,Overfitting,Rodent,Smoothing,South America,Tuning},
number = {4},
pages = {629--643},
title = {{Making better Maxent models of species distributions: Complexity, overfitting and evaluation}},
volume = {41},
