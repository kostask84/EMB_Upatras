file = {:E$\backslash$:/Academic/R/Command{\_}lines/SDm/ENM{\_}Scotland/enm{\_}course/refs/climate{\_}change/2010{\_}Huntley.pdf:pdf},
isbn = {251},
issn = {09067590},
journal = {Ecography (Cop.).},
number = {3},
pages = {621--626},
pmid = {213},
title = {{Beyond bioclimatic envelopes: dynamic species' range and abundance modelling in the context of climatic change}},
volume = {33},
year = {2010}
}
